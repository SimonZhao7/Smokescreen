{
  "manifest_version": 3,
  "name": "Smokescreen",
  "description": "Extension for blocking out content",
  "version": "1.0",
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": "images/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "webNavigation",
    "tabs",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://*/*"
      ]
    }
  ]
}